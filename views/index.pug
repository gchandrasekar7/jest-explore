extends layout

block layout-content
  div.View.WelcomeView
    h1.Banner Utilities
    div.Message
      div.Title
      fieldset
        legend Basic Arithmetic
        form(action="/arith", method="post")
          label Number 1:
          input(type="number" name="a" placeholder="")
          br
          label Number 2:
          input(type="number" name="b" placeholder="")
          br
          br
          label Operation:
          br
          label Addition
          input(type="radio" name="op" checked=true value='add')
          br
          label Multiplication
          input(type="radio" name="op" value='mul')
          br
          label Subtraction
          input(type="radio" name="op" value='sub')
          br
          label Division
          input(type="radio" name="op" value='div')
          br
          br
          input(type="submit" value="Do Arith")
          if res != null 
              p Result: #{res} 
          if error != null
              p Result: #{error}
    